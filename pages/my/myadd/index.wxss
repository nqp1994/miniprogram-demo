page {
  background: #f2f2f2;
}
.nui-search input {
  background: #f2f2f2;
}
.pro-detail {
  width: 100%;
}
.pro-detail .item1,.item2,.item3 {
  width: 100%;
  margin: 0 auto;
  display: none;
}
.pro-detail .active{display: block}
.pro-detail .show {
  width: 100%;
  padding-top: 20rpx;
  margin-top: 20rpx;
  background: #fff;
}
.pro-detail .show .show-left {
  display: inline-block;
  width: 120rpx;
  height: auto;
  vertical-align: top;
}
.pro-detail .show .show-left image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin:0 auto;
  border-radius: 60rpx;
  overflow: hidden;
}
.pro-detail .show .show-right {
  display: inline-block;
  width: 630rpx;
  overflow: hidden;
}
.show-right .user-name {
  font-size: 26rpx;
  color: #333;
}
.show-right .add-time {
  font-size: 22rpx;
  color: #999;
}
.show-content {
  margin: 10rpx 0;
  padding: 0 20rpx 0 0;
}
.show-content text {
  font-size: 28rpx;
  color: #333;
  line-height: 1;
}
.show-content .img-box {
  margin-top: 10rpx;
}
.show-content image {
  width: 30%;
  height: auto;
  margin-right:2.5%; 
}
.show-btn-group {
  font-size: 22rpx;
  color: #999;
  line-height: 50rpx;
  height: 50rpx;
}
.show-btn-group .iconfont {
  font-size: 24rpx;
}
.pro-info image {
  width: 100%;
}
.product {
  margin-top: 40rpx;
}
.product image{
  width: 120rpx;
  height: 120rpx;
}
.product .pro-name {
  display: inline-block;
  width: 400rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
  overflow: hidden;
}
.header  .btn {
  float: right;
  right: 30rpx;
  top: 20rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  margin-right: 20rpx;
}
.header .left {
  display: inline-block;
  width: 300rpx;
}